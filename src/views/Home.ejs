<div class="container">
    <div class="row">
        <div class="col-md-8">
          <h1>myContacts</h1>
          <br>
          <a href="/contact" class="btn btn-success">Add contact</a>
            <br><br>
            <form class="d-flex" role="search" action="/search">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search_query">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            <br><br>
            <% if (msg.length != 0) { %>
              <div class="alert alert-success" role="alert">
              <%= msg %>
              </div>
            <% } %>

            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Contacts</th>
                    <th scope="col">Handle</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (contact.length < 1) { %>
                    <tr>
                      <td colspan="4">
                        <div class="alert alert-warning" role="alert">
                          contact Not Found
                        </div>
                      </td>
                    </tr>
                  <% } %>
                <% contact.forEach((contact,i) => { i++%>
                 <tr>
                  <td><%= i++ %></td>
                  <td><%= contact.Nama %></td>
                  <td><%= contact.noHp %></td>
                  <td><a href="/detail/<%= contact.Nama %>" class="btn btn-primary badge rounded-flip">Details</a></td>
                 </tr>
                <% }) %>
                </tbody>
              </table>
        </div>
    </div>

    <% if (typeof jmlhhalaman != 'undefined') { %>
      <nav aria-label="Page navigation example">
        <ul class="pagination">
        
          <% for( let i = 1; i <= jmlhhalaman ; i++) { %>
            <li class="page-item"><a class="page-link" href="/?page=<%= i %>"><%= i %></a></li>
          <% } %>
    
        </ul>
      </nav>

    <% } %>
</div>